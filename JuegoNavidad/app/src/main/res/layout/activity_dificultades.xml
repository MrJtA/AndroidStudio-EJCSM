<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F5D20">

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="326dp"
        android:layout_height="58dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#FB0202"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Volver al menú"
        android:textColor="#F0EBEB"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFacil"
        android:layout_width="196dp"
        android:layout_height="66dp"
        android:backgroundTint="#FB0202"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="FÁCIL"
        android:textColor="#F0EBEB"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVolver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.628" />

    <Button
        android:id="@+id/btnDificil"
        android:layout_width="196dp"
        android:layout_height="66dp"
        android:backgroundTint="#FB0202"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="DIFÍCIL"
        android:textColor="#F0EBEB"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745" />

    <Button
        android:id="@+id/btnMedia"
        android:layout_width="196dp"
        android:layout_height="66dp"
        android:backgroundTint="#FB0202"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="MEDIA"
        android:textColor="#F0EBEB"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnDificil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFacil"
        app:layout_constraintVertical_bias="0.484" />

    <LinearLayout
        android:id="@+id/layoutTexto"
        android:layout_width="350dp"
        android:layout_height="279dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159">

        <TextView
            android:id="@+id/txtJuego"
            android:layout_width="329dp"
            android:layout_height="77dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="JUEGO DE NAVIDAD"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="309dp"
            android:layout_height="149dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="¡Pulsa sobre todos los Carti que puedas! Gana puntos por cada Carti que pulses. Si pulsas donde no hay ninguno, ¡pierdes puntos!"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="333dp"
            android:layout_height="80dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Selecciona la dificultad:"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
